--sys 계정으로 들어가
select sid,serial#,username,status from vesession where schemaname = 'TALKDOG';
--그 후 sid, serial를 차례대로 ','안에 넣음 (여러 개 일시 모두 다 )
alter system kill SESSION 'sid,serial';
--삭제
DROP USER TALKDOG CASCADE;

